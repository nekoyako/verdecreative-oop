-- create database
CREATE DATABASE verdecreative-oop;

-- create table client
CREATE TABLE `client` (
    id INT(11) UNSIGNED AUTO_INCREMENT,
    code VARCHAR(20),
    name VARCHAR(50),
    contactPerson VARCHAR(50),
    phone VARCHAR(14),
    address VARCHAR(100)
);


-- create table staff, abaikan dulu
CREATE TABLE staff (
    id INT(11) UNSIGNED AUTO_INCREMENT,
    name VARCHAR(50),
    position VARCHAR(50),
    username VARCHAR(50),
    password VARCHAR(32),
    PRIMARY KEY (id)
);

